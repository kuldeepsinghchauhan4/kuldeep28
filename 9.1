package com.cg.pak9.bean;

import java.io.*;

public class Reverse {

	public static void main(String[] args) {
		
		FileReader input = null;
		BufferedReader br = null;
		FileWriter output = null;
		BufferedWriter o = null;
		try {
			input = new FileReader("C:\\Users\\KSINGHCH\\Documents\\input.txt");
			br = new BufferedReader(input);
			String s = br.readLine();
			output = new FileWriter("C:\\Users\\KSINGHCH\\Documents\\output1.txt");
			o = new BufferedWriter(output);
			String s1[] = s.split("\\s");
			for (String s2 : s1) {
				StringBuilder string = new StringBuilder(s2);
				string.reverse();
				String s3 = new String(string);
				o.write(s3 + " ");
				System.out.println(s3 + " ");
			}
		} catch (IOException e) {
		
			e.printStackTrace();
		}
		try {

			o.close();
		} catch (IOException e) {
			
			e.printStackTrace();
		}
	}

}
